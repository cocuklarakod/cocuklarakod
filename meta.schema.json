{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project MetaData Schema",
  "description": "Defines the structure for meta.json files in the 'cocuklar-icin-projeler' project.",
  "type": "object",
  "properties": {
    "title": { "type": "string", "minLength": 5 },
    "description": { "type": "string", "minLength": 20 },
    "author": { "type": "string", "description": "GitHub username of the author.", "pattern": "^[a-zA-Z0-9-]+$" },
    "type": { "type": "string", "description": "The type of the project.", "enum": ["Oyun", "Araç", "Etkinlik", "Hikaye", "Eğitici"] },
    "age_range": { "type": "string", "enum": ["3-5", "6-8", "9-12", "Tümü"] },
    "tags": { "type": "array", "minItems": 1, "items": { "type": "string" } }
  },
  "required": ["title", "description", "author", "type", "age_range", "tags"]
}
